<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flashcards: La Casa</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    
    <style>
        body { font-family: 'Inter', sans-serif; background-color: #f0f9ff; }
        
        /* Efectos para el giro de la tarjeta 3D */
        .perspective-1000 { perspective: 1000px; }
        .transform-style-3d { transform-style: preserve-3d; }
        .backface-hidden { backface-visibility: hidden; }
        .rotate-y-180 { transform: rotateY(180deg); }
        
        /* Transici√≥n suave */
        .card-inner {
            transition: transform 0.6s;
            position: relative;
            width: 100%;
            height: 100%;
        }
        
        /* Clase para activar el giro */
        .flipped { transform: rotateY(180deg); }
    </style>
</head>
<body class="flex flex-col items-center justify-center min-h-screen p-4">

    <header class="mb-8 text-center">
        <h1 class="text-3xl font-bold text-blue-900 mb-2">Vocabolario: La Casa</h1>
        <p class="text-gray-600">Haz clic en la tarjeta para ver la traducci√≥n</p>
    </header>

    <div class="perspective-1000 w-full max-w-sm h-64 cursor-pointer" onclick="flipCard()">
        <div id="card-inner" class="card-inner transform-style-3d w-full h-full shadow-xl rounded-2xl">
            
            <div class="absolute w-full h-full backface-hidden bg-white rounded-2xl flex flex-col items-center justify-center border-2 border-blue-100">
                <span class="text-sm text-blue-500 font-semibold mb-2">ITALIANO üáÆüáπ</span>
                <h2 id="italian-word" class="text-4xl font-bold text-gray-800">...</h2>
            </div>

            <div class="absolute w-full h-full backface-hidden rotate-y-180 bg-blue-600 rounded-2xl flex flex-col items-center justify-center text-white">
                <span class="text-sm text-blue-200 font-semibold mb-2">ESPA√ëOL üá™üá∏</span>
                <h2 id="spanish-word" class="text-4xl font-bold">...</h2>
            </div>

        </div>
    </div>

    <div class="flex gap-4 mt-8">
        <button onclick="prevCard()" class="px-6 py-2 bg-white text-blue-600 font-semibold rounded-full shadow hover:bg-gray-50 transition border border-blue-200">
            ‚Üê Anterior
        </button>
        <button onclick="nextCard()" class="px-6 py-2 bg-blue-600 text-white font-semibold rounded-full shadow hover:bg-blue-700 transition">
            Siguiente ‚Üí
        </button>
    </div>

    <p id="counter" class="mt-4 text-gray-400 text-sm">1 / 10</p>

    <script>
        // 1. Aqu√≠ est√°n tus datos (puedes a√±adir m√°s palabras aqu√≠ f√°cilmente)
        const vocabulary = [
            { it: "La cucina", es: "La cocina" },
            { it: "Il bagno", es: "El ba√±o" },
            { it: "La camera da letto", es: "El dormitorio" },
            { it: "Il soggiorno", es: "La sala de estar" },
            { it: "La finestra", es: "La ventana" },
            { it: "La porta", es: "La puerta" },
            { it: "Il giardino", es: "El jard√≠n" },
            { it: "Le scale", es: "Las escaleras" },
            { it: "Il tetto", es: "El techo" },
            { it: "Il pavimento", es: "El suelo" }
        ];

        let currentIndex = 0;
        const cardInner = document.getElementById('card-inner');
        const italianText = document.getElementById('italian-word');
        const spanishText = document.getElementById('spanish-word');
        const counterText = document.getElementById('counter');

        // Funci√≥n para cargar la palabra actual
        function updateCard() {
            // Quitamos el giro si estaba girada
            cardInner.classList.remove('flipped');
            
            // Esperamos un poco (150ms) para cambiar el texto para que no se vea el cambio brusco
            setTimeout(() => {
                italianText.textContent = vocabulary[currentIndex].it;
                spanishText.textContent = vocabulary[currentIndex].es;
                counterText.textContent = `${currentIndex + 1} / ${vocabulary.length}`;
            }, 150);
        }

        // Funci√≥n para girar
        function flipCard() {
            cardInner.classList.toggle('flipped');
        }

        // Funci√≥n Siguiente
        function nextCard() {
            if (currentIndex < vocabulary.length - 1) {
                currentIndex++;
            } else {
                currentIndex = 0; // Volver al inicio
            }
            updateCard();
        }

        // Funci√≥n Anterior
        function prevCard() {
            if (currentIndex > 0) {
                currentIndex--;
            } else {
                currentIndex = vocabulary.length - 1; // Ir al final
            }
            updateCard();
        }

        // Iniciar la primera tarjeta al cargar
        updateCard();
    </script>
</body>
</html>
